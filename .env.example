# =============================================================================
# ENVIRONMENT VARIABLES - COPY TO .env AND FILL VALUES
# =============================================================================

# --- DagsHub ---
DAGSHUB_REPO_OWNER=your_username
DAGSHUB_REPO_NAME=aqi-prediction-mlops
DAGSHUB_TOKEN=your_dagshub_token

# --- MLflow (via DagsHub) ---
MLFLOW_TRACKING_URI=https://dagshub.com/${DAGSHUB_REPO_OWNER}/${DAGSHUB_REPO_NAME}.mlflow
MLFLOW_TRACKING_USERNAME=${DAGSHUB_REPO_OWNER}
MLFLOW_TRACKING_PASSWORD=${DAGSHUB_TOKEN}

# --- DVC Remote ---
DVC_REMOTE_URL=https://dagshub.com/${DAGSHUB_REPO_OWNER}/${DAGSHUB_REPO_NAME}.dvc

# --- FastAPI ---
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=2

# --- Model Paths (Production) ---
MODEL_PATH=models/optimized/model_final.pkl
FEATURES_PATH=models/optimized/features.txt
METADATA_PATH=models/optimized/model_metadata.json

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=app.log

# --- Railway Deployment (auto-injected) ---
# PORT=8000  # Railway sets this automatically